
<div class="row">
  <div class="col-sm-6 col-sm-offset-3 transparent-bg">
    <h4 class="border-bottom-white">
      <i class="glyphicon glyphicon-user">
      </i>
      Account Access
    </h4>
    
    <h4>
        Reset your password.
    </h4>
    <form accept-charset="UTF-8" role="form" id="login-recordar" method="post" action="change-password">
        

        <fieldset>
          <p>
            Enter your new password.
            
            <div class="form-group input-group">
              <span class="input-group-addon">
                *
              </span>
              <input class="form-control" placeholder="Your new password" name="new_password" type="password" required>
            </div>
            
            </p>
        </fieldset>

        <fieldset>
          <p>
            Confirm your new password.
            
            <div class="form-group input-group">
              <span class="input-group-addon">
                *
              </span>
              <input class="form-control" placeholder="Confirm your new password" name="confirm_password" type="password" required>
            </div>
            
            </p>
        </fieldset>

        <fieldset>
          <p>
            <button type="submit" class="btn btn-primary btn-block" id="btn-olvidado">
              Continue
            </button>
          </p>
        </fieldset>
      </form>
  </div>
</div>
